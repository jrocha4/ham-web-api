.container
  .row.login(ng-controller="authController")
    .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1.snapScreen
      .panel.panel-default
        error-message-box( validation-errors="validationErrors" )
        .panel-body
          h3.text-center
            | {{locale['form'].page['register'].title}}
          form(novalidate ng-submit="register()")
            form-input-tag(
              model="user.name"
              label="{{locale['form'].label['shared'].name}}"
              required="true"
              icon="user")
            form-input-tag(
              model="user.email"
              label="{{locale['form'].label['shared'].email}}"
              required="true"
              icon="envelope"
              regex="validate['email']")
            form-input-tag(
              model="user.password"
              type="password"
              label="{{locale['form'].label['shared'].password}}"
              required="true" icon="lock")
            form-input-tag(
              model="user.confirmPassword"
              type="password"
              label="{{locale['form'].label['shared'].confirmPassword}}"
              required="true" icon="lock" regex="validate['confirmPass']")

            .form-group.ng-hide(ng-show="error")
              .red.bold.margin {{error}}

            .row
              .col-md-12.form-group
                input( type="checkbox" ng-model="terms" )
                |  {{locale['form'].page['register'].terms[0]}}
                a( href="#")
                | {{locale['form'].page['register'].terms[1]}}

            button.btn.btn-block.btn-primary.btn-lg( type="submit" )
              | {{locale['form'].button['create']}}
          br
          br
          .form-group.text-center
            p.text-center
              | {{locale['form'].page['register'].haveAccount}}
            a.btn.btn-default( href="#/login")
              | {{locale['form'].page['register'].login}}